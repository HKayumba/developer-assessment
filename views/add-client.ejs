<%- include("partials/header.ejs") %>

    <section class="home">
        <h1>Add a new client</h1>
    <div class="row">
        <div class="col-sm-8">
          <div class="card">
            <div class="card-body">
  
              <!-- Makes POST request to /register route -->
              <form action="/add-client" method="POST">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                  <label for="">Code</label>
                  <input type="text" class="form-control" name="clientCode">
                </div>
                <button type="submit" class="btn btn-dark">Add</button>
              </form>
  
            </div>
        </div>
        <p class="m-2">Please generate the client code before adding a new client</p>
        <a href="/generate-code" class="btn btn-primary">Generate code</a>
    </div>
    </section>
    
    
